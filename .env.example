# ARIA Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# FRONTEND (Angular SSR) - Render
# =============================================================================
FRONTEND_URL=https://aria-frontend.onrender.com
NODE_ENV=production
FRONTEND_PORT=10000

# =============================================================================
# BACKEND SERVICES - Render
# =============================================================================

# Speech Service
SPEECH_SERVICE_URL=https://aria-speech-service.onrender.com
SPEECH_SERVICE_PORT=8001

# Adaptive Engine
ADAPTIVE_ENGINE_URL=https://aria-adaptive-engine.onrender.com
ADAPTIVE_ENGINE_PORT=8002

# Analytics Service
ANALYTICS_SERVICE_URL=https://aria-analytics-service.onrender.com
ANALYTICS_SERVICE_PORT=8003

# Test Orchestrator
TEST_ORCHESTRATOR_URL=https://aria-test-orchestrator.onrender.com
TEST_ORCHESTRATOR_PORT=8004

# Test Service
TEST_SERVICE_URL=https://aria-test-service.onrender.com
TEST_SERVICE_PORT=8005

# =============================================================================
# AI/ML SERVICES - Railway
# =============================================================================

# AI Avatar Service
AI_AVATAR_SERVICE_URL=https://your-ai-avatar-service.railway.app
AI_AVATAR_SERVICE_PORT=8006

# Mozilla TTS Service
MOZILLA_TTS_SERVICE_URL=https://your-mozilla-tts-service.railway.app
MOZILLA_TTS_SERVICE_PORT=8007

# Voice Isolation Service
VOICE_ISOLATION_SERVICE_URL=https://your-voice-isolation-service.railway.app
VOICE_ISOLATION_SERVICE_PORT=8008

# Voice Synthesis Service
VOICE_SYNTHESIS_SERVICE_URL=https://your-voice-synthesis-service.railway.app
VOICE_SYNTHESIS_SERVICE_PORT=8009

# =============================================================================
# DATABASE CONFIGURATIONS
# =============================================================================

# Supabase PostgreSQL (Primary Database)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key
DATABASE_URL=postgresql://username:password@db.your-project-id.supabase.co:5432/postgres

# MongoDB Atlas (Document Store)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/aria?retryWrites=true&w=majority
MONGODB_DATABASE=aria

# Upstash Redis (Cache)
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Daily.co Video API (for video interviews)
DAILY_API_KEY=your-daily-api-key
DAILY_DOMAIN=your-daily-domain

# OpenAI API (for AI features)
OPENAI_API_KEY=your-openai-api-key

# =============================================================================
# SECURITY & AUTH
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-here
ENCRYPTION_KEY=your-32-character-encryption-key
INTERNAL_SERVICE_KEY=your-internal-service-key

# CORS Origins (comma-separated)
CORS_ORIGINS=https://aria-frontend.onrender.com,https://your-custom-domain.com

# =============================================================================
# MONITORING
# =============================================================================
# UptimeRobot (configured via web interface)
LOG_LEVEL=info

# =============================================================================
# CLOUDFLARE (DNS & CDN)
# =============================================================================
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-zone-id

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEBUG=false
ENVIRONMENT=production
