{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfig": {
      "providers": ["java"],
      "buildCommand": "mvn clean package -DskipTests -Dmaven.test.skip=true"
    }
  },
  "deploy": {
    "startCommand": "java -Dserver.port=$PORT -Dspring.profiles.active=minimal -jar target/user-management-service-*.jar",
    "healthcheckPath": "/api/auth/health",
    "healthcheckTimeout": 600,
    "sleepBeforeRestart": 10
  }
}
