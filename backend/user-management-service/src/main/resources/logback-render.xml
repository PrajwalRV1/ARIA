<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender only - Render friendly -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- Application specific loggers -->
    <logger name="com.company.user" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>

    <!-- Spring Boot startup logging -->
    <logger name="org.springframework.boot" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>
    
    <logger name="org.springframework.boot.web" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>
    
    <logger name="org.springframework.boot.web.embedded.tomcat" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>

    <!-- Database and connection pool -->
    <logger name="com.zaxxer.hikari" level="WARN" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>
    
    <logger name="org.hibernate" level="WARN" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>

    <!-- Reduce noise -->
    <logger name="org.springframework.security" level="WARN" />
    <logger name="org.apache.catalina" level="INFO" />
    <logger name="org.apache.coyote" level="INFO" />
</configuration>
